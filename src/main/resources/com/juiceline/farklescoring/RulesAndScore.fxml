<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" stylesheets="@rulesandscore.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juiceline.farklescoring.RulesAndScoreController">
   <children>
      <VBox alignment="TOP_CENTER" prefWidth="1200.0" styleClass="mainFxmlClass">
         <children>
            <TextField id="TitleField" fx:id="titleTextField" alignment="CENTER" prefHeight="60.0" styleClass="mainFxmlClass" text="Farkle Game Rules and Scoring">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <HBox styleClass="mainFxmlClass">
               <children>
                  <VBox fx:id="ruleVbox" prefWidth="600.0" />
                  <VBox fx:id="scoreVbox" prefWidth="600.0" />
               </children>
            </HBox>
            <Button fx:id="closeButton" alignment="CENTER" mnemonicParsing="false" onAction="#closeButtonClick" prefHeight="80.0" prefWidth="150.0" text="Close">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
