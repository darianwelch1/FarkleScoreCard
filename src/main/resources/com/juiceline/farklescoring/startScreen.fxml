      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="700.0">
         <children>
            <Label id="TitleField" alignment="TOP_CENTER" contentDisplay="CENTER" text="Farkle Scoring Application">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Label>
            <HBox alignment="TOP_CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="nameTextBox" prefWidth="300.0" text="Enter the Players Name." wrapText="true">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField id="NameEntry" fx:id="nameTextField" maxWidth="300.0">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <Button fx:id="addNameButton" mnemonicParsing="false" onAction="#udpateNameList" prefWidth="300.0" text="Click to Add Name">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Button>
                        <Button fx:id="removeName" mnemonicParsing="false" onAction="#removeNameButtonClick" prefWidth="300.0" text="Click to Remove Name" wrapText="true">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
                  <ListView fx:id="nameEntry" editable="true" prefHeight="200.0" prefWidth="200.0">
                     <HBox.margin>
                        <Insets bottom="20.0" left="40.0" right="20.0" top="20.0" />
                     </HBox.margin></ListView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="addplayerNameButton" alignment="CENTER" mnemonicParsing="false" onAction="#buildScoreCardAction" text="Play Farkle" wrapText="true">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children></VBox>
   </children>
