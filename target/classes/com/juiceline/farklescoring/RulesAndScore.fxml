<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.juiceline.farklescoring.RulesAndScoreController">
    <stylesheets>
        <URL value="@/styles/rulesandscore.css" />
    </stylesheets>
   <children>
      <VBox alignment="BOTTOM_RIGHT">
         <children>
            <TextField alignment="TOP_CENTER" text="Farkle Game Rules and Scoring">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <HBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <TextArea fx:id="rulesTextArea" prefWidth="300.0" text="Rules" wrapText="true" />
                  <TextArea fx:id="scoringTextArea" prefWidth="300.0" text="Scoring" />
               </children>
            </HBox>
            <Button fx:id="closeButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#closeButtonClick" text="Close">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
